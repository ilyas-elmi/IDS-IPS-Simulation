
# General ICMP detection for any source
alert icmp any any -> $HOME_NET any (msg:"ICMP Traffic Detected"; sid:1000003; rev:1; detection_filter:track by_src, count 1, seconds 1;)

# SSH brute force detection
alert tcp $EXTERNAL_NET any -> $HOME_NET 22 (msg:"SSH Brute Force Attack"; flags:S; detection_filter:track by_src, count 3, seconds 1; sid:1000002; rev:1;)

# ICMP detection specifically for public IP traffic
alert icmp 34.229.89.41 any -> $HOME_NET any (msg:"ICMP Traffic Detected from Public IP"; sid:1000004; rev:1; detection_filter:track by_src, count 1, seconds 1;)x